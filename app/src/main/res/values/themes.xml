<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevPUCP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_logo_pucp_background</item>
        <item name="colorPrimaryVariant">#009688</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash_theme" parent="Theme.DevPUCP">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="fondo_verde" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/verde_oscuro_screen</item>
    </style>
    <style name="mdcTheme">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">cut</item>
    </style>
    <style name="boton_amarillo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFD21F</item>
        <item name="colorPrimaryVariant">#240056</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>

    </style>

    <style name="boton_rojo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF1F41</item>
        <item name="colorPrimaryVariant">#240056</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>

    </style>

    <style name="boton_verde_claro" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00838F</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>

    </style>
    <style name="roundedImage" parent="Theme.DevPUCP">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="vista_clara" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryVariant">#FFD21F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>
    </style>
</resources>